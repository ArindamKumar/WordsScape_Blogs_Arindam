<%- include('header.ejs') %>
	<form class="new" action="/posts" method="POST">
		<div class="mb-3">
  			<label for="postTitle" class="form-label">Title</label>
  			<input type="text" name="title" class="form-control" id="postTitle" placeholder="Enter the title of your post">
		</div>
		<div class="mb-3">
  			<label for="postAuthor" class="form-label">Author</label>
  			<input type="text" name="author" class="form-control" id="postAuthor" placeholder="Enter your name[the author's name]">
		</div>
		<div class="mb-3">
  			<label for="postContent" class="form-label">Content</label>
  			<textarea name="content" class="form-control" id="postContent" placeholder="Start writing here....." rows="3"></textarea>
		</div>
		<div class="mb-3">
			<label for="imageRequired" class="form-label">Do you want to include an image?</label>
			<input type="checkbox" name="imageRequired" onclick="toggleImageUrlInput()">
		</div>
		<div class="mb-3" id="imageUrlInput" style="display: none;">
			<label for="imageUrl" class="form-label">Image URL</label>
			<input type="text" class="form-control" name="imageUrl" placeholder="Enter the url of the image">
		</div>
		<button type="submit" class="btn btn-success">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
			<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"></path>
			</svg>
            Done
	    </button>
	</form>
<%- include('footer.ejs') %>